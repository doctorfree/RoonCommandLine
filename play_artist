#!/bin/bash

ROON=$HOME/Roon
ZONECONF=$HOME/.roonzone
PLAY=play_artist.py
ARTIST="Deep Purple"

export PYTHONUSERBASE=/home/doctor/Python3

[ -d $ROON ] || exit 1

cd $ROON

[ -f $PLAY ] || exit 2

[ "$1" ] && ARTIST="$*"

# Get the zone if it is set
if [ -f ${ZONECONF} ]
then
    . ${ZONECONF}
else
    ROON_ZONE="Living Room"
fi
python $PLAY -a "$ARTIST" -z "$ROON_ZONE"
