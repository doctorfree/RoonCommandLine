#!/bin/bash

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
LIST=list_tags.py
TAG=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI}

[ -f $LIST ] || exit 2

[ "$1" ] && TAG="$*"

# Get the zone if it is set
if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=`grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    ${ROON}/bin/set_zone $DEFZONE
    . ${ROONCONF}
fi

[ "${TAG}" ] || TAG="__all__"

have_python3=`type -p python3`
if [ "${have_python3}" ]
then
    python3 $LIST -t "$TAG" -z "$ROON_ZONE"
else
    python $LIST -t "$TAG" -z "$ROON_ZONE"
fi

