#!/bin/bash

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
LIST=list_tags.py
TAG=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI}

[ -f $LIST ] || exit 2

[ "$1" ] && TAG="$*"

# Get the zone if it is set
if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=`grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    set_zone $DEFZONE
    . ${ROONCONF}
fi

# Get the default album if one is not provided
[ "${TAG}" ] || {
    TAG=`grep ^DefaultTag ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    # Remove leading and trailing spaces in TAG
    TAG="$(echo -e "${TAG}" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
}

PYTHON_EXE=`type -p python`
[ "${PYTHON_EXE}" ] || PYTHON_EXE=`type -p python3`

[ "${PYTHON_EXE}" ] || {
    echo "Could not locate python executable. Exiting."
    exit 1
}

${PYTHON_EXE} $LIST -t "$TAG" -z "$ROON_ZONE"
