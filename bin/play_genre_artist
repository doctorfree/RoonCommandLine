#!/bin/bash

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
PLAY=play_genre_artist.py
GENRE=
ARTIST=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI}

[ -f $PLAY ] || exit 2

# First argument is genre, second is artist
[ "$1" ] && GENRE="$1"
[ "$2" ] && ARTIST="$2"

# Get the zone if it is set
if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=`grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    ${ROON}/bin/set_zone $DEFZONE
    . ${ROONCONF}
fi

# Get the default genre if one is not provided
[ "${GENRE}" ] || {
    GENRE=`grep ^DefaultGenre ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    # Remove leading and trailing spaces in GENRE
    GENRE="$(echo -e "${GENRE}" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
}
# Get the default artist if one is not provided
[ "${ARTIST}" ] || {
    ARTIST=`grep ^DefaultArtist ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    # Remove leading and trailing spaces in ARTIST
    ARTIST="$(echo -e "${ARTIST}" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
}

have_python3=`type -p python3`
if [ "${have_python3}" ]
then
    python3 $PLAY -a "$ARTIST" -g "$GENRE" -z "$ROON_ZONE"
else
    python $PLAY -a "$ARTIST" -g "$GENRE" -z "$ROON_ZONE"
fi
