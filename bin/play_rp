#!/bin/bash

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
PLAY=play_rp.py

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI}

[ -f $PLAY ] || exit 2

# Get the zone if it is set
if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=`grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    set_zone $DEFZONE
    . ${ROONCONF}
fi

have_python3=`type -p python3`
if [ "${have_python3}" ]
then
    python3 $PLAY -z "$ROON_ZONE"
else
    python $PLAY -z "$ROON_ZONE"
fi

