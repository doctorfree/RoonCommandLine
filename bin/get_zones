#!/bin/bash
#
# shellcheck disable=SC1090,SC2220

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
LIST=list_zones.py
ZONE=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI} || exit 1

[ -f $LIST ] || exit 2

if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=$(grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } ')
    # Remove leading and trailing spaces in DEFZONE
    DEFZONE="$(echo -e "${DEFZONE}" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    ${ROON}/bin/set_zone "${DEFZONE}"
    . ${ROONCONF}
fi

[ "$1" ] && ZONE="$*"

# Get all zones if no zone is specified
[ "${ZONE}" ] || ZONE="__all__"

have_python3=$(type -p python3)
if [ "${have_python3}" ]
then
    python3 $LIST -g -z "${ZONE}"
else
    python $LIST -g -z "${ZONE}"
fi
