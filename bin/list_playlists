#!/bin/bash

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
LIST=list_playlists.py
PLAYLIST=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI}

[ -f $LIST ] || exit 2

[ "$1" ] && PLAYLIST="$*"

# Get the zone if it is set
if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=`grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    set_zone $DEFZONE
    . ${ROONCONF}
fi

# Get the default playlist if one is not provided
[ "${PLAYLIST}" ] || {
    PLAYLIST=`grep ^DefaultPlaylist ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    # Remove leading and trailing spaces in PLAYLIST
    PLAYLIST="$(echo -e "${PLAYLIST}" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
}

have_python3=`type -p python3`
if [ "${have_python3}" ]
then
    python3 $LIST -p "$PLAYLIST" -z "$ROON_ZONE"
else
    python $LIST -p "$PLAYLIST" -z "$ROON_ZONE"
fi

