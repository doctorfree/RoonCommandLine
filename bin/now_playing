#!/bin/bash
#
# shellcheck disable=SC1090,SC2220

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
NOWP=now_playing.py
ZONE=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI} || exit 1

[ -f $NOWP ] || exit 2

if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=$(grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } ')
    # Remove leading and trailing spaces in DEFZONE
    DEFZONE="$(echo -e "${DEFZONE}" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    ${ROON}/bin/set_zone "${DEFZONE}"
    . ${ROONCONF}
fi

aflag=
while getopts "az:" flag; do
    case $flag in
        z)
            ZONE="$OPTARG"
            ;;
        a)
            aflag="-a"
            ;;
    esac
done

# Get all zones if no zone is specified
[ "${ZONE}" ] || ZONE="__all__"

have_python3=$(type -p python3)
if [ "${have_python3}" ]
then
    python3 $NOWP ${aflag} -z "${ZONE}"
else
    python $NOWP ${aflag} -z "${ZONE}"
fi
