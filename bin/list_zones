#!/bin/bash

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
LIST=list_zones.py
ZONE=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI}

[ -f $LIST ] || exit 2

if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=`grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } '`
    # Remove leading and trailing spaces in DEFZONE
    DEFZONE="$(echo -e "${DEFZONE}" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    set_zone $DEFZONE
    . ${ROONCONF}
fi

[ "$1" ] && ZONE="$*"

# Get the default zone if one is not provided
[ "${ZONE}" ] || {
    if [ "${ROON_ZONE}" ]
    then
        ZONE="${ROON_ZONE}"
    else
        ZONE="${DEFZONE}"
    fi
}

have_python3=`type -p python3`
if [ "${have_python3}" ]
then
    python3 $LIST -z "$ZONE"
else
    python $LIST -z "$ZONE"
fi

echo ""
echo "Your configured zone groupings:"
grep ^Group_ ${ROONETC}/roon_api.ini
