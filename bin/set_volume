#!/bin/bash
#
# shellcheck disable=SC1090,SC2220

ROON=/usr/local/Roon
ROONAPI=${ROON}/api
ROONETC=${ROON}/etc
ROONCONF=${ROONETC}/pyroonconf
SCRIPT=set_volume.py
VOLUME="-v 50"
GROUPED=
RELATIVE=
STEP=

[ -d ${ROONAPI} ] || exit 1

cd ${ROONAPI} || exit 1

[ -f $SCRIPT ] || exit 2

# Get the zone if it is set
if [ -f ${ROONCONF} ]
then
    . ${ROONCONF}
else
    DEFZONE=$(grep ^DefaultZone ${ROONETC}/roon_api.ini | awk -F '=' ' { print $2 } ')
    ${ROON}/bin/set_zone "${DEFZONE}"
    . ${ROONCONF}
fi

# Parse the arguments to get the command and zone
while getopts "gp:rsv:z:" flag; do
    case $flag in
        g)
            GROUPED="-g"
            ;;
        p)
            VOLUME="-p $OPTARG"
            ;;
        r)
            RELATIVE="-r"
            ;;
        s)
            STEP="-s"
            ;;
        v)
            VOLUME="-v $OPTARG"
            ;;
        z)
            ROON_ZONE="$OPTARG"
            ;;
    esac
done

have_python3=$(type -p python3)
if [ "${have_python3}" ]
then
    python3 $SCRIPT ${GROUPED} ${RELATIVE} ${STEP} ${VOLUME} -z "$ROON_ZONE"
else
    python $SCRIPT ${GROUPED} ${RELATIVE} ${STEP} ${VOLUME} -z "$ROON_ZONE"
fi

